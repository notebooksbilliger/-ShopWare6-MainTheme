{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block page_checkout_confirm_tos %}
    <div class="confirm-tos">
        <div class="card checkout-card">
            <div class="card-body">
                {% block page_checkout_confirm_newsletter_control %}
                    <div class="custom-control custom-checkbox">
                        {% block page_checkout_confirm_newsletter_control_checkbox %}
                            <input type="checkbox"
                                   class="custom-control-input"
                                   id="newsletter"
                                   form="confirmOrderForm"
                                   name="newsletter"/>
                        {% endblock %}

                        {% block page_checkout_confirm_newsletter_control_label %}
                            <label for="newsletter" class="custom-control-label">
                                {{ "general.confirmNewsletter"|trans|raw }}
                            </label>
                        {% endblock %}
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block page_checkout_aside_actions %}
    <p class="checkout-buy-button-info">
        {{ "general.confirmTermsAndPrivacyPolicy"|trans({
            '%button-label%': 'checkout.confirmSubmit'|trans,
            '%terms-url%': path('frontend.cms.page',{ id: shopware.config.core.basicInformation.tosPage }),
            '%privacy-policy-url%': path('frontend.cms.page',{ id: shopware.config.core.basicInformation.privacyPage })
        })|raw }}
    </p>
    {{ parent() }}
{% endblock %}
